# Copy this file to .env.local and fill in the missing values
# Command: cp env.local.template .env.local
# Or on Windows PowerShell: Copy-Item env.local.template .env.local

# Supabase Configuration
# Get these values from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
SUPABASE_URL=YOUR_SUPABASE_URL_HERE
NEXT_PUBLIC_SUPABASE_URL=YOUR_SUPABASE_URL_HERE
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_DEFAULT_KEY=YOUR_PUBLISHABLE_KEY_HERE

# Supabase Service Role Key (REQUIRED - bypasses Row Level Security)
# WARNING: Keep this secret! Get from Supabase Dashboard -> Settings -> API -> service_role key
SUPABASE_SERVICE_ROLE_KEY=YOUR_SERVICE_ROLE_KEY_HERE

# Supabase Anon Key (public key)
# Get from Supabase Dashboard -> Settings -> API -> anon/public key
SUPABASE_ANON_KEY=YOUR_ANON_KEY_HERE
NEXT_PUBLIC_SUPABASE_ANON_KEY=YOUR_ANON_KEY_HERE

# OpenAI Configuration
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=YOUR_OPENAI_API_KEY_HERE

# Cron Secret (generate with: openssl rand -hex 32)
# This protects your cron endpoints - use a strong random secret
CRON_SECRET=YOUR_CRON_SECRET_HERE

# Model Configuration (optional - defaults provided)
SUMMARY_MODEL=gpt-4o-mini
SUMMARY_TRANSLATE_MODEL=gpt-4o-mini

# Pipeline Configuration (optional - defaults provided)
SIMILARITY_THRESHOLD=0.65
WINDOW_HOURS=24
MAX_SUMMARY_ARTICLES=5
RSS_CONCURRENCY=4

# Site Configuration (for SEO)
NEXT_PUBLIC_SITE_URL=https://lankanewsroom.xyz

# News API Keys (optional - for additional news sources)
# NewsAPI.org: https://newsapi.org/register
NEWSAPI_KEY=YOUR_NEWSAPI_KEY_HERE
# NewsData.io: https://newsdata.io/
NEWSDATA_API_KEY=YOUR_NEWSDATA_API_KEY_HERE

# Agent Configuration (optional - defaults provided)
# Enable AI agents for complex operations (true/false)
AGENT_ENABLED=false
# Percentage of operations to use agents (0-100, 0 = disabled, 100 = all operations)
AGENT_ROLLOUT_PERCENTAGE=0
# Use agents for complex cases even if rollout < 100% (true/false)
AGENT_USE_FOR_COMPLEX=true
# Quality threshold for agent operations (0-1, default 0.7)
AGENT_QUALITY_THRESHOLD=0.7
# Maximum retries for agent operations (default 3)
AGENT_MAX_RETRIES=3
# Timeout for agent operations in milliseconds (default 60000 = 60 seconds)
AGENT_TIMEOUT=60000
# Agent model overrides (optional - uses SUMMARY_MODEL by default)
# AGENT_SUMMARY_MODEL=gpt-4o-mini
# AGENT_TRANSLATION_MODEL=gpt-4o-mini
# AGENT_SEO_MODEL=gpt-4o-mini
# AGENT_IMAGE_MODEL=gpt-4o-mini
# AGENT_CATEGORY_MODEL=gpt-4o-mini